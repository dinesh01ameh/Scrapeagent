# SwissKnife AI Scraper - Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Configuration
APP_NAME=SwissKnife AI Scraper
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8601

# Database Configuration
POSTGRES_DB=swissknife
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/swissknife

# Redis Configuration
REDIS_URL=redis://redis:6379

# Ollama Configuration
OLLAMA_ENDPOINT=http://ollama:11434
DEFAULT_MODEL=llama3.2

# Frontend Configuration
FRONTEND_URL=http://localhost:8650
BACKEND_URL=http://localhost:8601

# CORS Configuration
CORS_ORIGINS=http://localhost:8650,http://frontend:80

# crawl4ai Configuration (CRITICAL - Core Scraping Engine)
CRAWL4AI_MAX_SESSIONS=10
CRAWL4AI_LOG_LEVEL=INFO
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# Jina AI Configuration (CRITICAL - Core AI Processing Engine)
JINA_API_KEY=your_jina_api_key_here
JINA_READER_ENDPOINT=https://r.jina.ai
JINA_SEARCH_ENDPOINT=https://s.jina.ai
JINA_EMBEDDINGS_ENDPOINT=https://api.jina.ai/v1/embeddings
JINA_RERANKER_ENDPOINT=https://api.jina.ai/v1/rerank

# Security (Change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Proxy Configuration
PROXY_ENABLED=false
PROXY_ROTATION_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
