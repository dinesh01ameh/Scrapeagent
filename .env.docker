# SwissKnife AI Scraper - Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Configuration
APP_NAME=SwissKnife AI Scraper
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8601

# Database Configuration
POSTGRES_DB=swissknife
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/swissknife

# Redis Configuration
REDIS_URL=redis://redis:6379

# Ollama Configuration
OLLAMA_ENDPOINT=http://ollama:11434
DEFAULT_MODEL=llama3.2

# Frontend Configuration
FRONTEND_URL=http://localhost:8650
BACKEND_URL=http://localhost:8601

# CORS Configuration
CORS_ORIGINS=http://localhost:8650,http://frontend:80

# Security (Change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Proxy Configuration
PROXY_ENABLED=false
PROXY_ROTATION_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
