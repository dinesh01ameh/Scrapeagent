# Application Configuration
APP_NAME=SwissKnife AI Scraper
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8601

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Local Database (Alternative)
DATABASE_URL=postgresql://user:password@localhost:5432/swissknife

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Local LLM Configuration (Ollama)
OLLAMA_ENDPOINT=http://localhost:11434
DEFAULT_MODEL=llama3.3
FALLBACK_MODEL=mistral
CODE_MODEL=codellama
MAX_CONTEXT_LENGTH=8192

# Jina AI Configuration
JINA_API_KEY=your-jina-api-key
JINA_READER_ENDPOINT=https://r.jina.ai

# Proxy Configuration
PROXY_ROTATION_ENABLED=true
PROXY_HEALTH_CHECK_INTERVAL=300
PROXY_TIMEOUT=30
PROXY_MAX_RETRIES=3

# Proxy Providers (Optional)
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
SMARTPROXY_USERNAME=
SMARTPROXY_PASSWORD=

# Crawling Configuration
DEFAULT_USER_AGENT=SwissKnife-AI-Scraper/1.0
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=1
RESPECT_ROBOTS_TXT=true
MAX_PAGES_PER_DOMAIN=1000

# Content Processing
MAX_CONTENT_SIZE=10485760  # 10MB
ENABLE_OCR=true
ENABLE_PDF_PROCESSING=true
ENABLE_IMAGE_ANALYSIS=true

# Storage Configuration
DATA_STORAGE_PATH=./data
CACHE_STORAGE_PATH=./cache
LOG_STORAGE_PATH=./logs
MODEL_STORAGE_PATH=./models

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_STRUCTURED_LOGGING=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Management
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Feature Flags
ENABLE_NATURAL_LANGUAGE_INTERFACE=true
ENABLE_MULTIMODAL_PROCESSING=true
ENABLE_ADAPTIVE_EXTRACTION=true
ENABLE_PROXY_ROTATION=true
ENABLE_CONTENT_INTELLIGENCE=true

# Development Settings
RELOAD_ON_CHANGE=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/swissknife_test
TEST_REDIS_URL=redis://localhost:6379/1
